
{
  "name": "HelloWorldPlugin",
  "version": "1.0.0",
  "description": "A simple Hello World plugin to validate the DevFlow plugin system. Demonstrates basic file operations, configuration usage, and result handling.",
  "language": "CSharp",
  "entryPoint": "HelloWorldPlugin.cs",
  "capabilities": [
    "file_read",
    "file_write",
    "configuration_access"
  ],
  "dependencies": [
    "nuget:Newtonsoft.Json@13.0.3",
    "file:./lib/CustomHelper.dll@1.0.0"
  ],
  "configuration": {
    "greeting": "Hello",
    "outputPath": "./hello-output.txt",
    "includeTimestamp": true,
    "logLevel": "info"
  }
}